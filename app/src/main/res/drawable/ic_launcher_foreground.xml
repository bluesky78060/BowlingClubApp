<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    <!-- Safe zone is the center 66dp circle (33dp radius from center at 54,54) -->
    <!-- Bowling ball centered at (54, 54) with radius 20dp -->
    <group android:translateX="54" android:translateY="54">
        <!-- Main bowling ball -->
        <path
            android:fillColor="#1565C0"
            android:pathData="M0,0 m-20,0 a20,20 0,1,1 40,0 a20,20 0,1,1 -40,0" />

        <!-- Finger holes (3 holes in triangular pattern) -->
        <!-- Top left hole -->
        <path
            android:fillColor="#0D47A1"
            android:pathData="M-6,-8 m-2.5,0 a2.5,2.5 0,1,1 5,0 a2.5,2.5 0,1,1 -5,0" />

        <!-- Top right hole -->
        <path
            android:fillColor="#0D47A1"
            android:pathData="M6,-8 m-2.5,0 a2.5,2.5 0,1,1 5,0 a2.5,2.5 0,1,1 -5,0" />

        <!-- Bottom center hole (thumb hole) -->
        <path
            android:fillColor="#0D47A1"
            android:pathData="M0,4 m-3,0 a3,3 0,1,1 6,0 a3,3 0,1,1 -6,0" />
    </group>
</vector>
