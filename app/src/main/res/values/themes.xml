<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for light mode -->
    <style name="Theme.BowlingClubApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.BowlingClubApp</item>
    </style>

    <!-- Base application theme - Compose handles full Material3 theming -->
    <style name="Theme.BowlingClubApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
    </style>
</resources>
